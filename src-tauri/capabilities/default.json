{
  "identifier": "default",
  "description": "Default capability for the application",
  "windows": ["main"],
  "permissions": [
    {
      "identifier": "fs:allow-read",
      "allow": [
        {"path": "$RESOURCE/images/*"}
      ]
    },
    {
      "identifier": "fs:allow-read-dir",
      "allow": [
        {"path": "$RESOURCE/images/*"}
      ]
    },
    {
      "identifier": "fs:allow-write",
      "allow": [
        {"path": "D:/*"}
      ]
    },
    "shell:allow-open"
  ]
}